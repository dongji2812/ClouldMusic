/* 头部区域。 */
.recommendSongContainer .header {
    position: relative;
    width: 100%;
    height: 300rpx;
}

.recommendSongContainer .header image {
    width: 100%;
    height: 100%;
}

.recommendSongContainer .header .date {
    position: absolute;
    left: 50%;
    top: 50%;
    margin-left: -150rpx;
    margin-top: -50rpx;
    width: 300rpx;
    height: 100rpx;
    text-align: center;
    line-height: 100rpx;
    color: #fff;
}

.header .date .day {
    font-size: 38rpx;
}

/* 列表区域。 */
.listContainer {
    position: relative;
    top: -20rpx;
    padding: 0 20rpx;
    background-color: #fff; /* 背景颜色默认值是透明的。 */
    border-radius: 30rpx;
}

/* 列表头部区域。 */
.listContainer .header {
    height: 80rpx;
    line-height: 80rpx;
}

.listContainer .header .changeMore {
    float: right;
}

/*  歌曲区域。 */
.listScroll{
    height: calc(100vh - 380rpx);
}

.scrollItem {
    display: flex; /* 里面内容是flex布局。 */
    position: relative; /* 最后一个元素不占flex布局位置，用绝对定位。 */
    margin-bottom: 20rpx;
}

.scrollItem image {
    width: 80rpx;
    height: 80rpx;
    border-radius: 8rpx;
}

.scrollItem .musicInfo {
    display: flex;
    flex-direction: column;
    margin-left: 20rpx;
}

.scrollItem .musicInfo text {
    height: 40rpx;
    line-height: 40rpx;
    font-size: 24rpx;
    max-width: 500rpx;
    white-space: nowrap;
    overflow: hidden;
    text-overflow: ellipsis;
}

.scrollItem .iconfont {
    position: absolute;
    right: 0;
    width: 80rpx;
    height: 80rpx;
    line-height: 80rpx;
    text-align: right;
}